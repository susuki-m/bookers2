<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: 'form-control name' %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image %>
          <%= f.file_field :profile_image, class: 'form-control-file user_image' %>
        </div>
        <div class="form-group">
          <%= f.label "Introduction" %>
          <%= f.text_area :introduction, class: 'form-control introduction' %>
        </div>
        <%= f.submit "Update User", class: "btn btn-success" %>
      <% end %> 
    </div>
  </div>
</div>

