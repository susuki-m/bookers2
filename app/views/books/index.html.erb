<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="mt-3">
        <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag url_for(@user.profile_image) %>
        <% else %>
          <p>No image available</p>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
            <i class ="fas fa-user-cog"></i>
          <% end %>
        </div>
      </div>
    

    
      <div class="mt-3">
        <h2>New Book</h2>
        <%= form_with model: Book.new, local: true do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control book_title" %>
          </div>
          
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class: "form-control book_body" %>
          </div>
          
          <div class="form-group">
            <%= f.submit "Create Book", class: "btn btn-success", data: { disable_with: "Creating..." } %>
          </div>
        <% end %>
      </div>
    </div>


    <div class="col-md-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
</div>